{
	"name": "Farmville maximizer",
	"version": "2.0.9.$Rev$",
	"description": "This script maximizes the game to the complete browser window. Both on facebook and farmville.com it removes all unwanted boxes.",
	"minimum_chrome_version": "4.1.249.1045",
	"content_scripts": [
		{
			"all_frames": true,
			"js": [
				"jquery/jquery.gmfix.js",
				"jquery/jquery-ui.min.js",
				"gm/substitute.js",
				"farmville_maximizer.user.js"
			],
			"matches": [
				"http://*.facebook.com/onthefarm/*",
				"https://*.facebook.com/onthefarm/*",
				"http://*.farmville.com/*",
				"https://*.farmville.com/*"
			],
			"include_globs": [
				"http*facebook.com/onthefarm/*",
				"http*farmville.com/*"
			],
			"exclude_globs": [
				"*/askmats.*",
				"*/exchange.*",
				"*/fans.*",
				"*/giftaccept.*",
				"*/gifts.*",
				"*/gifts_send.*",
				"*/invite.*",
				"*/lonelycow.*",
				"*/money.*",
				"*/neighbors.*",
				"*/reward.*",
				"*/sendcredits.*",
				"*/sendmats.*",
				"*/sentthankyougift.*",
				"*/wishlist_give.*"
			],
			"run_at": "document_end"
		}
	]
}